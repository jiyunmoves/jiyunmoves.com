<div class="panel">
   <div class="panel-heading">
     <h3><%= @category %></h3>
   </div>
   <div class="row panel-body">
     <div class="col-md-2">
     </div>
     <div class="col-md-8">
       <div class="subsection" style="display: block; visibility: visible;">
         <div id='gallery'>
           <div class="image-selector clearfix">
             <ul>
               <li class="nav-btn back disabled"></li>
               <li class="nav-btn prev"></li></ul>
             <div class="collection clearfix">
               <ul style="width: 1284px; left: 0px;">
                 <% @galleries.each do |gallery| %>
                   <li class="" style="opacity: 1;"><a id="0" href="#"><img src="<%= gallery.image_url(:thumb) %>" width="100" height="75" alt=""></a></li>
                 <% end %>
               </ul>
             </div>
             <ul>
               <li class="nav-btn next"></li>
               <li class="nav-btn forward"></li></ul>
           </div>

           <div class="main-image" style="opacity: 1; min-height: 450px;">
             <img src="" alt="">
           </div>
         </div>

         <div class="article_body">
           <div class="gallery_item_container">
             <div class="gallery_description">
               <h4></h4>
               <p></p>
             </div>
           </div>
         </div>

      <div class="col-md-2">
      </div>
    </div>
  </div>
</div>
