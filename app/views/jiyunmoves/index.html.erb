<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div class="panel panel-success">
        <div class="panel-heading">
          <h2>Latest works</h2>
        </div>
        <div class="panel-body">
          <% count=0 %>
          <% @galleries.reverse.each do |gallery| %>
            <% count=count+1 %>
            <% if count <= 5 %>
              <a class="thumbnail" href="#"><img src="<%= gallery.image_url(:thumb) %>"></a>
              <div class="caption">
                <h3><%= gallery.title %></h3>
                <p><%= gallery.desc %></p>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="panel panel-warning">
        <div class="panel-heading">
          <h2>Latest blogs</h2>
        </div>
        <div class="panel-body">
          <% count=0 %>
          <% @blogs.reverse.each do |post| %>
            <% count=count+1 %>
            <% if count <= 5 %>
              <h3><a href="#"><%= post.title %></a></h3>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <a data-pin-do="embedUser" href="http://www.pinterest.com/jiyunmoves/"data-pin-scale-width="80" data-pin-scale-height="200" data-pin-board-width="400">Visit Jiyun's profile on Pinterest.</a><!-- Please call pinit.js only once per page --><script type="text/javascript" async src="//assets.pinterest.com/js/pinit.js"></script>
      <a href="http://instagram.com/jiyunmoves?ref=badge" class="ig-b- ig-b-v-24"><img src="//badges.instagram.com/static/images/ig-badge-view-24.png" alt="Instagram" /></a>
    </div>
  </div>
</div>
